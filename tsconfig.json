{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "paths": {
      "@i18n": ["src/i18n"],
      "@i18n/*": ["src/i18n/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@pages": ["src/pages"],
      "@pages/*": ["pages/*"],
      "@hooks": ["src/hooks"],
      "@hooks/*": ["src/hooks/*"],
      "@routes": ["src/routes"],
      "@firebase": ["src/firebase"],
      "@constants": ["src/constants"],
      "@constants/*": ["src/constants/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
