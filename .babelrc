{
  "presets": ["@babel/preset-react", "@babel/preset-typescript"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "@i18n": "./src/i18n",
          "@utils": "./src/utils",
          "@pages": "./src/pages",
          "@hooks": "./src/hooks",
          "@routes": "./src/routes",
          "@service": "./src/services",
          "@configs": "./src/configs",
          "@firebase": "./src/firebase",
          "@constants": "./src/constants",
          "@components": "./src/components"
        }
      }
    ]
  ]
}
